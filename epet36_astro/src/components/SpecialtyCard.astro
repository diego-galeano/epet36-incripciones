---
// Specialty Card Component
interface Props {
    title: string;
    content: string;
    backgroundImage?: string;
    imageAlt?: string;
    useBackgroundImage?: boolean;
    reverse?: boolean;
}

const {
    title,
    content,
    backgroundImage,
    imageAlt = title,
    useBackgroundImage = false,
    reverse = false
} = Astro.props;
---

<article class={`specialty-card ${reverse ? 'specialty-card--reverse' : ''}`}>
    {useBackgroundImage ? (
        <div
            class="specialty-image specialty-image--background"
            style={`background-image: linear-gradient(135deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.3) 100%), url('${backgroundImage}');`}
        >
            <h3 class="specialty-title">{title}</h3>
            <a
                href="https://docs.google.com/forms/d/e/1FAIpQLSe_6kCREOestKITOPzeVc72bSKKudOD7uqZxImUvCTVYGRaKw/viewform"
                class="cta-button"
                target="_blank"
                rel="noopener noreferrer"
            >
                Preinscribite Ahora
            </a>
        </div>
    ) : (
        <img
            class="specialty-image"
            src={backgroundImage}
            alt={imageAlt}
        />
    )}
    <div class="specialty-content">
        {useBackgroundImage ? (
            <p>
                <span class="quote quote-open">"</span>
                {content}
                <span class="quote quote-close">"</span>
            </p>
        ) : (
            <h3 class="specialty-title">{title}</h3>
        )}
    </div>
</article>


<style>
    /* Specialty Card */
	.specialty-card {
		display: flex;
		flex-direction: column;
		gap: 30px;
		align-items: center;
		max-width: 600px ;
		color: var(--white);
		text-align: center;
	}

	.specialty-card--reverse {
		flex-direction: column-reverse;
	}

	.specialty-image {
		width: 100%;
		height: auto;
		object-fit: cover;
		border-radius: 8px;
        box-shadow: 0px 5px 10px var(--gray);
	}

	.specialty-image--background {
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		width: 100%;
		max-width: 600px;
		min-height: 400px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 20px;
		border-radius: 8px;
	}

	.specialty-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--white);
	}

	.specialty-content {
		width: 100%;      
		max-width: 600px;
		padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 5px 10px var(--gray);
	}

	.specialty-content p {
		font-size: 1.2rem;
        font-weight: 400;
		line-height: 1.6;
		color: var(--text-light);
		position: relative;
        padding-inline: 20px;
	}

	.quote {
		font-size: 3rem;
		font-weight: 700;
		color: var(--primary-orange);
		line-height: 1;
		font-family: "Space Grotesk", sans-serif;
	}

	.quote-open {
		position: absolute;
		top: -10px;
		left: -10px;
	}

	.quote-close {
		position: absolute;
		bottom: -20px;
		right: -10px;
	}

	.cta-button {
		display: inline-block;
		margin-top: 20px;
		padding: 12px 30px;
		background: var(--primary-orange);
		color: var(--white);
		text-decoration: none;
		border-radius: 8px;
		font-size: 1.1rem;
		font-weight: 600;
		transition: all 0.3s ease;
		box-shadow: 0 4px 10px rgba(255, 107, 53, 0.3);
	}

	.cta-button:hover {
		background: var(--primary-teal);
		transform: translateY(-2px);
		box-shadow: 0 6px 15px rgba(22, 114, 109, 0.4);
	}

	.cta-button:active {
		transform: translateY(0);
	}

	@media (max-width: 968px) {

        .specialty-content {
            min-width: 350;
        }

        .specialty-image--background {
			min-height: 300px;
		}

		.specialty-image {
			max-width: 100%;
		}

		.specialty-title {
			font-size: 1.5rem;
		}
        .specialty-card--reverse {
            flex-direction: column;
        }
	}
</style>