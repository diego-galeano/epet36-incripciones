---
// Hero Component
---

<section id="inicio" class="hero-wrapper">
    <div class="hero">
        <div class="container hero-container">
            <div class="hero-content">
                <h1 class="hero-title">
                    EPET N°36<br />
                    <span class="hero-subtitle">CONSTRUYAMOS</span><br />
                    <span class="hero-accent">TU FUTURO<br />JUNTOS!</span>
                </h1>
                <div class="hero-cta">
                    <a
                        href="https://docs.google.com/forms/d/e/1FAIpQLSe_6kCREOestKITOPzeVc72bSKKudOD7uqZxImUvCTVYGRaKw/viewform"
                    >
                        <div class="cta-bubble">
                            <p class="cta-text-small">PREINSCRIPCIONES</p>
                            <p class="cta-year">2026</p>
                            <p class="cta-text-large">ABIERTAS</p>
                        </div>
                    </a>
                </div>
                <div class="hero-footer">
                    <h2>EDUCACIÓN TÉCNICA DE EXCELENCIA</h2>
                    <p class="hero-duration">6 AÑOS | TÍTULO NACIONAL</p>
                    <p class="hero-benefits">
                        Becas | Pasantías | Tecnología de vanguardia
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-wrapper {
        background: linear-gradient(135deg, #ebecee, #caced1 100%);
        display: flex;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    .hero {
        background: linear-gradient(
                135deg,
                rgba(245, 245, 245, 0) 0%,
                rgba(255, 255, 255, 0) 100%
            ),
            url("../../public/hero-bg.png");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: scroll;
        padding: 80px 0;
        position: relative;
        min-height: 800px;
        width: 100%;
    }

    .hero-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        align-items: center;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 30px;
        color: var(--text-light);
    }

    .hero-subtitle {
        color: var(--light-dark);
        font-weight: 700;
    }

    .hero-accent {
        color: var(--primary-teal);
        font-weight: 900;
    }

    .hero-cta {
        margin: 30px 0;
    }

    .hero-cta a {
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .hero-cta a:hover {
        transform: scale(1.05);
    }

    .hero-cta a:active {
        transform: scale(0.98);
    }

    .cta-bubble {
        background: var(--light-orange);
        color: var(--white);
        border-radius: 50%;
        width: 250px;
        height: 250px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        box-shadow: 0 10px 30px rgba(22, 114, 109, 0.3);
        transition: all 0.3s ease;
    }

    .hero-cta a:hover .cta-bubble {
        box-shadow: 0 15px 40px rgba(22, 114, 109, 0.4);
    }

    .cta-text-small {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 5px;
    }

    .cta-year {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1;
        margin: 10px 0;
    }

    .cta-text-large {
        font-size: 1.8rem;
        font-weight: 700;
    }

    .hero-footer {
        color: var(--white);
        padding: 30px;
        margin: 0;
        width: 100%;
    }

    .hero-footer h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .hero-duration {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .hero-benefits {
        font-size: 1rem;
    }

    @media (max-width: 968px) {
        .hero {
            min-height: 500px;
        }

        .hero-container {
            grid-template-columns: 1fr;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .cta-bubble {
            width: 200px;
            height: 200px;
        }

        .cta-year {
            font-size: 3rem;
        }

        .cta-text-large {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .hero-wrapper {
            background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
        }

        .hero {
            padding: 60px 0;
            background: none;
            min-height: auto;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-footer h2 {
            font-size: 1.2rem;
        }
    }
</style>
