    .cta-bubble::before {
        content: '';
        position: absolute;
        top: -20px;
        left: 50%;
        transform: translateX(-50%);
        width: 20px;
        height: 20px;
        background: var(--primary-teal);
        border-radius: 50%;
    }

    .cta-bubble::after {
        content: '';
        position: absolute;
        top: -40px;
        left: 40%;
        width: 15px;
        height: 15px;
        background: var(--primary-teal);
        border-radius: 50%;
    }
*/
    .cta-text-small {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 5px;
    }

    .cta-year {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1;
        margin: 10px 0;
    }

    .cta-text-large {
        font-size: 1.8rem;
        font-weight: 700;
    }

    .hero-footer {
        background: var(--primary-teal);
        color: var(--white);
        padding: 30px;
        border-radius: 10px;
        margin-top: 30px;
    }

    .hero-footer h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .hero-duration {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .hero-benefits {
        font-size: 1rem;
    }

    .hero-image {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 400px;
    }

    @media (max-width: 968px) {
        .hero {
            min-height: 500px;
        }

        .hero-container {
            grid-template-columns: 1fr;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .cta-bubble {
            width: 200px;
            height: 200px;
        }

        .cta-year {
            font-size: 3rem;
        }

        .cta-text-large {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .hero-wrapper {
            background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
        }

        .hero {
            padding: 60px 0;
            background: none;
            min-height: auto;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-footer h2 {
            font-size: 1.2rem;
        }
    }
</style>
