<style>
    .footer {
        background: linear-gradient(135deg, var(--primary-teal) 0%, #0d8f8a 100%);
        color: var(--white);
        padding: 60px 0 20px;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 60px;
        align-items: stretch;
    }
    .section {
        min-height: 16rem;
    }
    .location-section {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        height: 100%;
    }

    .map-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
        pointer-events: none;
    }

    .map-overlay {
        position: relative;
        z-index: 1;
        background: linear-gradient(135deg, rgba(22, 114, 109, 0.75) 0%, rgba(13, 143, 138, 0.75) 100%);
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 30px;
        text-align: center;
        transition: background 0.3s ease;
    }

    .map-overlay:hover {
        background: linear-gradient(135deg, rgba(22, 114, 109, 0.6) 0%, rgba(13, 143, 138, 0.6) 100%);
    }

    .map-overlay h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        font-family: 'Montserrat', 'Roboto', sans-serif;
        color: var(--white);
    }

    .map-link {
        display: flex;
        align-items: center;
        gap: 15px;
        color: var(--white);
        text-decoration: none;
        transition: all 0.3s ease;
        padding: 20px;
        border-radius: 12px;
    }

    .map-link:hover {
        background: rgba(255, 107, 53, 0.3);
        transform: scale(1.05);
    }

    .map-link svg {
        opacity: 0.9;
        transition: all 0.3s ease;
    }

    .map-link:hover svg {
        opacity: 1;
        color: var(--primary-orange);
    }

    .map-link span {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .contact-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: rgba(255, 255, 255, 0.2);
        padding: 30px;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        height: 100%;
    }

    .contact-section h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        font-family: 'Montserrat', 'Roboto', sans-serif;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 15px;
        color: var(--white);
        text-decoration: none;
        font-size: 1.2rem;
        transition: opacity 0.3s ease;
    }

    .contact-item:hover {
        opacity: 0.8;
    }

    .contact-item svg {
        flex-shrink: 0;
    }

    .social-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: rgba(255, 255, 255, 0.2);
        padding: 30px;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        height: 100%;
    }

    .social-section h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.3;
        font-family: 'Montserrat', 'Roboto', sans-serif;
    }

    .social-badge {
        display: inline-flex;
        align-items: center;
        gap: 15px;
        padding: 12px 25px;
        border: 2px solid var(--white);
        border-radius: 50px;
        color: var(--white);
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        background: rgba(53, 238, 255, 0.2);
    }

    .social-badge:hover {
        background: var(--primary-orange);
        transform: translateX(5px);
        border-color: var(--primary-orange);
    }

    .social-badge svg {
        flex-shrink: 0;
    }

    .footer-bottom {
        margin-top: 50px;
        padding-top: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        text-align: center;
    }

    .footer-bottom p {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    @media (max-width: 968px) {
        .footer {
            padding: 50px 0 20px;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 40px;
            text-align: center;
        }

        .location-section,
        .contact-section,
        .social-section {
            align-items: center;
            text-align: center;
        }

        .location-section {
            text-align: center;
        }

        .contact-section {
            align-items: center;
        }

        .social-section {
            align-items: center;
        }

        .location-section h3,
        .contact-section h3,
        .social-section h3 {
            font-size: 1.5rem;
        }

        .address,
        .contact-item,
        .social-badge {
            font-size: 1.1rem;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding: 40px 0 20px;
        }

        .location-section h3,
        .contact-section h3,
        .social-section h3 {
            font-size: 1.3rem;
        }

        .address,
        .contact-item,
        .social-badge {
            font-size: 1rem;
        }
    }
</style>
