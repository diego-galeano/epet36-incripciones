<style>
    .footer {
        background: var(--primary-teal);
        color: var(--white);
        padding: 60px 0 20px;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 60px;
        align-items: start;
    }

    .location-section {
        text-align: left;
    }

    .location-section h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 15px;
        font-family: 'Montserrat', 'Roboto', sans-serif;
    }

    .address {
        font-size: 1.2rem;
        line-height: 1.6;
        opacity: 0.95;
    }

    .contact-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: flex-start;
    }

    .contact-section h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0;
        font-family: 'Montserrat', 'Roboto', sans-serif;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 15px;
        color: var(--white);
        text-decoration: none;
        font-size: 1.2rem;
        transition: opacity 0.3s ease;
    }

    .contact-item:hover {
        opacity: 0.8;
    }

    .contact-item svg {
        flex-shrink: 0;
    }

    .social-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: flex-start;
    }

    .social-section h3 {
        font-size: 1.8rem;
        font-weight: 800;
        line-height: 1.3;
        font-family: 'Montserrat', 'Roboto', sans-serif;
    }

    .social-badge {
        display: inline-flex;
        align-items: center;
        gap: 15px;
        padding: 12px 25px;
        border: 2px solid var(--white);
        border-radius: 50px;
        color: var(--white);
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .social-badge:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    .social-badge svg {
        flex-shrink: 0;
    }

    .footer-bottom {
        margin-top: 50px;
        padding-top: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        text-align: center;
    }

    .footer-bottom p {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    @media (max-width: 968px) {
        .footer {
            padding: 50px 0 20px;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 40px;
            text-align: center;
        }

        .location-section,
        .contact-section,
        .social-section {
            align-items: center;
            text-align: center;
        }

        .location-section {
            text-align: center;
        }

        .contact-section {
            align-items: center;
        }

        .social-section {
            align-items: center;
        }

        .location-section h3,
        .contact-section h3,
        .social-section h3 {
            font-size: 1.5rem;
        }

        .address,
        .contact-item,
        .social-badge {
            font-size: 1.1rem;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding: 40px 0 20px;
        }

        .location-section h3,
        .contact-section h3,
        .social-section h3 {
            font-size: 1.3rem;
        }

        .address,
        .contact-item,
        .social-badge {
            font-size: 1rem;
        }
    }
</style>
