<style>
    .cta-action-wrapper {
        background: linear-gradient(180deg, #ffffff 0%, #f5f5f5 100%);
        padding: 80px 0;
        width: 100%;
    }

    .cta-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto auto auto;
        gap: 40px;
        align-items: start;
    }

    /* Image Grid Styling */
    .image-grid {
        position: relative;
        height: 500px;
        grid-column: 1;
        grid-row: 1 / 4;
    }

    .circle-teal {
        position: absolute;
        top: 0;
        left: 0;
        width: 180px;
        height: 180px;
        background: var(--primary-teal);
        border-radius: 50%;
        z-index: 1;
    }

    .circle-orange {
        position: absolute;
        bottom: 120px;
        left: 0;
        width: 120px;
        height: 120px;
        background: var(--primary-orange);
        border-radius: 50%;
        z-index: 1;
    }

    .image-circle {
        position: absolute;
        border-radius: 50%;
        overflow: hidden;
        z-index: 2;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .image-circle img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-1 {
        top: 0;
        left: 120px;
        width: 280px;
        height: 280px;
    }

    .image-2 {
        top: 50px;
        right: 0;
        width: 280px;
        height: 280px;
    }

    .image-3 {
        bottom: 0;
        left: 80px;
        width: 280px;
        height: 280px;
    }

    /* CTA Title Styling */
    .cta-title {
        font-size: 3.5rem;
        font-weight: 400;
        line-height: 1;
        color: var(--text-dark);
        display: flex;
        flex-direction: column;
    }

    .cta-take {
        font-weight: 400;
        font-size: 2.3rem;
        margin-left: 20px;
        color: var(--text-dark);
    }
    .cta-action {
        color: var(--primary-teal);
        font-weight: 900;
        font-size: 4rem;
    }

    .cta-today {
        font-size: 2.8rem;
        margin-left: 9rem;
    }

    /* Actions List */
    .cta-actions-list {
        grid-column: 2;
        grid-row: 2;
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-self: start;
    }

    .action-item {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .icon-circle {
        background: var(--primary-orange);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        box-shadow: 0 4px 10px rgba(255, 107, 53, 0.3);
    }

    .action-item p {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-dark);
        margin: 0;
    }

    /* Extra Benefits Section */
    .extra-benefits {
        grid-column: 1 / 3;
        grid-row: 3;
        background: var(--primary-teal);
        color: var(--white);
        padding: 40px;
        border-radius: 20px;
        margin-top: 7rem;
    }

    .benefits-title {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 30px;
        text-align: center;
        letter-spacing: 1px;
    }

    .benefits-list {
        display: flex;
        justify-content: space-around;
        gap: 40px;
        flex-wrap: wrap;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        gap: 15px;
        flex: 1;
        min-width: 250px;
    }

    .icon-circle-teal {
        background: rgba(255, 255, 255, 0.2);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .benefit-item p {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
    }

    @media (max-width: 968px) {
        .cta-content {
            grid-template-columns: 1fr;
            gap: 60px;
        }

        .image-grid {
            grid-column: 1;
            grid-row: 1;
            height: 400px;
        }

        .circle-teal {
            width: 140px;
            height: 140px;
        }

        .circle-orange {
            width: 100px;
            height: 100px;
        }

        .image-1,
        .image-2,
        .image-3 {
            width: 220px;
            height: 220px;
        }

        .cta-title {
            grid-column: 1;
            grid-row: 2;
        }

        .cta-actions-list {
            grid-column: 1;
            grid-row: 3;
            margin-top: 0;
            margin-bottom: 40px;
        }

        .extra-benefits {
            grid-column: 1;
            grid-row: 4;
        }

        .benefits-list {
            flex-direction: column;
            gap: 20px;
        }
    }

    @media (max-width: 768px) {
        .cta-action-wrapper {
            padding: 60px 0;
        }

        .image-grid {
            height: 350px;
        }

        .circle-teal {
            width: 100px;
            height: 100px;
        }

        .circle-orange {
            width: 80px;
            height: 80px;
            bottom: 80px;
        }

        .image-1,
        .image-2,
        .image-3 {
            width: 180px;
            height: 180px;
        }

        .image-1 {
            left: 80px;
        }

        .image-3 {
            left: 60px;
        }

        .cta-title {
            font-size: 2.5rem;
        }

        .badge-year {
            font-size: 2.5rem;
        }

        .badge-text-large {
            font-size: 1.2rem;
        }

        .extra-benefits {
            padding: 30px 20px;
        }

        .benefits-title {
            font-size: 1.5rem;
        }

        .benefit-item {
            min-width: 100%;
        }
    }
</style>
