<style>
	.contact-page {
		background: var(--light);
	}

	/* Header Section */
	.contact-header {
		padding: 80px 0 60px;
		background: linear-gradient(135deg, var(--primary-teal), #06B6D4);
		color: var(--white);
		text-align: center;
	}

	.page-title {
		font-size: 4rem;
		font-weight: 900;
		margin-bottom: 20px;
		font-family: 'Montserrat', 'Roboto', sans-serif;
	}

	.page-subtitle {
		font-size: 1.5rem;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
		opacity: 0.95;
	}

	/* Contact Content */
	.contact-content {
		padding: 80px 0;
		background: var(--white);
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1.2fr;
		gap: 60px;
		align-items: start;
	}

	/* Contact Info Cards */
	.contact-info-section {
		display: flex;
		flex-direction: column;
		gap: 25px;
	}

	.info-card {
		background: var(--white);
		padding: 25px;
		border-radius: 15px;
		box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.info-card:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 25px rgba(22, 114, 109, 0.15);
	}

	.info-icon {
		font-size: 2.5rem;
		margin-bottom: 10px;
	}

	.info-card h3 {
		font-size: 1.4rem;
		font-weight: 700;
		color: var(--primary-teal);
		margin-bottom: 10px;
		font-family: 'Montserrat', 'Roboto', sans-serif;
	}

	.info-card p {
		font-size: 1.1rem;
		line-height: 1.6;
		color: var(--text-dark);
		margin: 0;
	}

	.info-card a {
		color: var(--primary-teal);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.info-card a:hover {
		color: var(--primary-orange);
	}

	/* Map Section */
	.map-section {
		background: var(--white);
		padding: 30px;
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.map-section h3 {
		font-size: 2rem;
		font-weight: 700;
		color: var(--primary-teal);
		margin-bottom: 25px;
		font-family: 'Montserrat', 'Roboto', sans-serif;
	}

	.map-container {
		margin-bottom: 20px;
		overflow: hidden;
		border-radius: 15px;
	}

	.directions-button {
		display: inline-block;
		width: 100%;
		padding: 15px 30px;
		background: var(--primary-orange);
		color: var(--white);
		text-decoration: none;
		border-radius: 10px;
		font-size: 1.1rem;
		font-weight: 600;
		text-align: center;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
	}

	.directions-button:hover {
		background: var(--primary-teal);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(22, 114, 109, 0.4);
	}

	/* CTA Section */
	.cta-section {
		padding: 80px 0;
		background: linear-gradient(180deg, #f5f5f5 0%, #ffffff 100%);
		text-align: center;
	}

	.cta-section h2 {
		font-size: 2.8rem;
		font-weight: 800;
		color: var(--primary-teal);
		margin-bottom: 20px;
		font-family: 'Montserrat', 'Roboto', sans-serif;
	}

	.cta-section p {
		font-size: 1.3rem;
		color: var(--text-dark);
		margin-bottom: 40px;
	}

	.cta-buttons {
		display: flex;
		gap: 20px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-button {
		display: inline-block;
