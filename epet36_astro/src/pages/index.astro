---
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import CTAAction from '../components/CTAAction.astro';
import '../styles/global.css';
import SpecialtyCard from '../components/SpecialtyCard.astro';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<title>EPET N°36 - Educación Técnica de Excelencia | Itaembé Miní, Posadas</title>
		<meta name="description" content="Formamos líderes técnicos con valores humanos. Preinscripciones 2026 abiertas. Educación técnica de excelencia en Posadas, Misiones." />
	</head>
	<body>
		<Navigation />
		<Hero />
		<CTAAction />
		<main id="oferta-educativa" class="oferta-educativa">
			<div class="container">
			<h2 class="section-title">Dos Caminos, Un Futuro Exitoso</h2>

				<div class="specialties-grid">
					<!-- Tecnología de los Alimentos Card -->
					<div id="tecnologia-alimentos">
						<SpecialtyCard
							title="Tecnología de los Alimentos"
							content="Formamos técnicos especializados en procesos de transformación, conservación y control de calidad de alimentos. Con laboratorios equipados y prácticas profesionalizantes en la industria alimentaria."
							backgroundImage="/tecnologia-alimentos-img.jpg"
							linkURL="https://docs.google.com/forms/d/e/1FAIpQLSf4YbkAXE9lWXIaLrnWZQETfm-jteA3llHx-ny4loYGF3-yJw/viewform"
							useBackgroundImage={true}
						/>
					</div>

					<!-- Gestión Organizacional Card -->
					<div id="gestion-organizacional">
						<SpecialtyCard
							title="Gestión y Administración de Organizaciones"
							content="Desarrollamos competencias en administración, contabilidad, recursos humanos y gestión empresarial. Preparamos líderes capaces de gestionar organizaciones de manera eficiente y sostenible."
							backgroundImage="/gestion_organizacional_img.jpg"
							useBackgroundImage={true}
							linkURL="https://docs.google.com/forms/d/e/1FAIpQLSe_6kCREOestKITOPzeVc72bSKKudOD7uqZxImUvCTVYGRaKw/viewform"
							reverse={true}
						/>
					</div>
				</div>
			</div>
		</main>
	</body>
</html>

<script>
	// Smooth scroll to oferta-educativa section with offset for title
	document.addEventListener('DOMContentLoaded', () => {
		const links = document.querySelectorAll('a[href="#oferta-educativa"]');

		links.forEach(link => {
			link.addEventListener('click', (e) => {
				e.preventDefault();
				const target = document.getElementById('oferta-educativa');

				if (target) {
					const yOffset = -80; // Offset to show title with padding
					const y = target.getBoundingClientRect().top + window.pageYOffset + yOffset;

					window.scrollTo({
						top: y,
						behavior: 'smooth'
					});
				}
			});
		});
	});
</script>

<style>
	/* Oferta Educativa Section */
	.oferta-educativa {
		background-color: var(--light);
		padding: 40px 0;
		margin-bottom: 2rem;
	}

	.section-title {
		font-size: 3.6rem;
		font-weight: 800;
		margin: 30px 0 60px 0;
		color: var(--primary-teal);
		font-family: 'Montserrat', 'Roboto', sans-serif;
		text-align: center;
	}

	.specialties-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 80px;
		align-items: start;
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
	}

	.specialties-grid::before {
		content: '';
		position: absolute;
		left: 50%;
		top: 0;
		bottom: 0;
		width: 2px;
		background: linear-gradient(to bottom,
			transparent,
			var(--primary-teal) 20%,
			var(--primary-teal) 80%,
			transparent
		);
		transform: translateX(-50%);
	}

	.specialties-grid > div {
		position: relative;
	}

	.specialties-grid > div::before {
		content: '';
		position: absolute;
		width: 40px;
		height: 40px;
		border: 3px solid var(--primary-orange);
		border-radius: 50%;
		background: var(--white);
		z-index: 10;
	}

	#tecnologia-alimentos::before {
		top: 50%;
		right: -60px;
		transform: translateY(-50%);
	}

	#gestion-organizacional::before {
		top: 50%;
		left: -60px;
		transform: translateY(-50%);
	}

	@media (max-width: 968px) {
		.specialties-grid {
			display: flex;
			flex-direction: column;
			gap: 40px;
			align-items: center;
		}

		.specialties-grid::before,
		.specialties-grid > div::before {
			display: none;
		}

		.section-title {
			font-size: 2rem;
			margin: 10px 0 40px 0;
		}
	}
</style>